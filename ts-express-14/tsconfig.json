{
    "compilerOptions": {
        "target": "ES2022",   // Use modern ES features for Node.js v21+
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "./src",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
          },
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,                 // Strict type checking
        "strict": true,                        // Enable all strict type checks
        "esModuleInterop": true,               // Import CommonJS modules seamlessly
        "skipLibCheck": true,                  // Skip type checks for library files
        "forceConsistentCasingInFileNames": true // Enforce case-sensitive imports
        },
    "include": ["src/**/*"],                 // Include all TypeScript files in `src`
    "exclude": ["node_modules", "dist"],      // Exclude build output and dependencies
    "files": ["src/middlewares/types.d.ts"]

}